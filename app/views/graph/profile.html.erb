<div id="profile_container">
<h1>My Profile</h1>

<br>
<div class="hr"></div>
<br>

<%= form_tag do %>

  <fieldset>
  <legend>Personal Information</legend>

  <div class="profile_personal_info">
    <div class="field">
      <%= label_tag(:name, "Full Name:") %>
      <%= text_field_tag(:name) %>
    </div>
    <div class="field">
      <%= label_tag(:major, "Major:") %>
      <%= text_field_tag(:major) %>
    </div>
    <div class="field">
      <%= label_tag(:year, "Year of study:") %>
      <%= select_tag(:year, options_for_select([['Freshman', 1], ['Sophomore', 2], ['Junior', 3], ['Senior', 4], ['Graduate', 5]])) %>
    </div>
    <div class="field">
      <%= label_tag(:living_group, "Dorm or living group:") %>
      <%= text_field_tag(:living_group) %>
    </div>
  </div>

  <br><br>
  <h3>Check 5 things that you have the most appreciation for:</h3>
  <br>
  <div class="field profile_checkboxes">
    <div class="field">
      <%= check_box_tag(:ck_family) %>
      <%= label_tag(:ck_family, "Family") %>
      <%= check_box_tag(:ck_travel) %>
      <%= label_tag(:ck_travel, "Travel") %>
      <%= check_box_tag(:ck_education) %>
      <%= label_tag(:ck_education, "Education") %>
      <%= check_box_tag(:ck_organization) %>
      <%= label_tag(:ck_organization, "Organization") %>
    </div>
    <div class="field">
      <%= check_box_tag(:ck_leadership) %>
      <%= label_tag(:ck_leadership, "Leadership") %>
      <%= check_box_tag(:ck_outdoors) %>
      <%= label_tag(:ck_outdoors, "The outdoors") %>
      <%= check_box_tag(:ck_fun) %>
      <%= label_tag(:ck_fun, "Fun") %>
    </div>
    <div class="field">
      <%= check_box_tag(:ck_making_things) %>
      <%= label_tag(:ck_making_things, "Making things") %>
      <%= check_box_tag(:ck_staying_fit) %>
      <%= label_tag(:ck_staying_fit, "Staying fit") %>
      <%= check_box_tag(:ck_music) %>
      <%= label_tag(:ck_music, "Music") %>
      <%= check_box_tag(:ck_giving_back) %>
      <%= label_tag(:ck_giving_back, "Giving back") %>
    </div>

  </div>
  <br>
  <br>
  <h3>Instructions for after you submit:</h3>
  <p>Click on nodes to expand them.  To add a connection, click on a category and then add their name.  The size of a node corresponds to how similar someone is to you.</p>
  <br>
  <p>Have fun exploring!</p>
  <br>
  <br>

  <div class="actions">
    <%= submit_tag("Submit") %>
  </div>

  </fieldset>

<% end %>

<br>
<br>

<h3>Reset Your Password</h3>
<%= link_to "Click here to reset your password", new_password_reset_path %>

</div>

